<%- include('includes/head') %>
<%- include('includes/nav') %>
<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-4">
            <h1 class="text-center">Contato</h1>
            <p class="text-center lead">Crie ou edite seu contato abaixo:</p>

            <%- include('includes/messages') %>

            <% if(contato._id) { %>
            <form class="form-contato" action="/contato/edit/<%=contato.id%>" method="POST">
            <% } else { %>
            <form class="form-contato" action="/contato/register" method="POST">
            <% } %>
                <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                <div class="form-group">
                    <label>Nome<span style="color: crimson">*</span></label>
                    <input value="<%=contato.nome%>" type="text" class="form-control" name="nome">
                </div>
                <div class="form-group">
                    <label>Nome do Pet<span style="color: crimson">*</span></label>
                    <input value="<%=contato.nomePet%>" type="text" class="form-control" name="nomePet">
                </div>
                <div class="form-group">
                    <label>Raça<span style="color: crimson">*</span></label>
                    <input value="<%=contato.raca%>" type="text" class="form-control" name="raca">
                </div>
                <div class="form-group select">
                    <label>Porte:</label>
                    <select class="form-control" value="<%=contato.porte%>" name="porte">
                        <option class="opcoes-porte" value="none" selected disabled>Selecione uma opção de porte:</option>
                        <option class="opcoes-porte" value="Pequeno">Pequeno</option>
                        <option class="opcoes-porte" value="Medio">Médio</option>
                        <option class="opcoes-porte" value="Grande">Grande</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Telefone<span style="color: crimson">*</span></label>
                    <input value="<%=contato.telefone%>" type="tel" class="form-control" name="telefone">
                    <small><span style="color: crimson">*</span>Campos obrigatórios.</small>
                </div>
                <div class="div-botao-contato">
                <button type="submit" class="btn btn-primary my-3">Salvar</button>
                </div>
            </form>

        </div>
        
        <div class="col-lg-2"></div>
    </div>
</div>
<%- include('includes/footer') %>
<script src="/assets/js/contato.js"></script>
