<%- include('includes/head') %>
<%- include('includes/nav') %>
<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-4">
            <h1 class="text-center">Cadastro</h1>
            <p class="text-center lead">Efetue o cadastro de um colaborador:</p>

            <%- include('includes/messages'); %>
            
            <div class="row">
                <div class="col-lg my-4">

                    <form class="form-cadastro" action="/login/register" method="POST">
                        <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                        <div class="form-group">
                            <label>Nome</label>
                            <input type="text" class="form-control" name="nome">
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                            <label>Função</label>
                            <input type="text" class="form-control" name="funcao">
                            </div>
                            <div class="form-group col-md-6">
                            <label>Endereço de E-mail</label>
                            <input type="email" class="form-control" name="email" placeholder="Ex.: email@email.com">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label>Senha do novo Usuário</label>
                                <input type="password" class="form-control" id="password" name="password" placeholder="A senha precisa conter entre 6 a 12 caracteres">
                                <small class="form-text text-muted">Nunca compartilhe sua senha</small>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Confirmar senha do novo Usuário</label>
                                <input type="password" class="form-control" name="confirm-password" placeholder="A senha precisa conter entre 6 a 12 caracteres">
                            </div>
                        </div>
                        <div class="form-group mx-auto text-center" style="max-width: 200px;">
                            <label for="senhaAdmin">Senha do administrador</label>
                            <input type="password" class="form-control" name="senhaAdmin" required>
                        </div>
                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-primary">Criar conta</button>
                        </div>
                    </form>
                
                </div>
            
            </div>

        </div>
        
        <div class="col-lg-2"></div>
    </div>
</div>
<%- include('includes/footer') %>
