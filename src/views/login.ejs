<%- include('includes/head') %>
<%- include('includes/nav') %>
<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        
        <div class="col-lg-8 my-4">
            <%- include('includes/messages'); %>
            <h1 class="text-center">Login</h1>
            <p class="text-center lead">Acesse sua conta</p>
            <small class="text-center d-block">Se não tiver conta, solicite cadastramento com o administrador.</small>

            
            <div class="row">
                <div class="col-lg my-4">
                    <img src="/img-login.png" alt="">
                </div>
                
                <div class="col-lg my-4">

                    <form class="form-login mt-4" action="/login/login" method="POST">
                        <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                        <div class="form-group">
                            <label>Endereço de E-mail</label>
                            <input type="email" class="form-control" name="email" placeholder="Ex.: email@email.com">
                        </div>
                        <div class="form-group">
                            <label>Senha</label>
                            <input type="password" class="form-control" name="password">
                            <small class="form-text text-muted">Nunca compartilhe sua senha</small>
                        </div>
                        <button type="submit" class="btn btn-primary">Acessar</button>
                    </form>
                </div>
            
            </div>

        </div>
        
        <div class="col-lg-2"></div>
    </div>
</div>
<%- include('includes/footer') %>
